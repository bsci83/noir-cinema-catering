rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Contact form submissions collection
    match /submissions/{submissionId} {
      allow read: if false; // Only allow read access through admin panel or backend
      allow create: if true; // Allow anyone to submit the contact form
      allow update, delete: if false; // No updates or deletions allowed from client
    }
    
    // Testimonials collection (if you plan to add this feature)
    match /testimonials/{testimonialId} {
      allow read: if true; // Anyone can read testimonials
      allow write: if false; // Only admin can write testimonials (do this through admin panel)
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 